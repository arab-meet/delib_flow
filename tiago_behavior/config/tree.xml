<root main_tree_to_execute="MainTree" BTCPP_format="4">
  <BehaviorTree ID="MainTree">

    <Repeat num_cycles="-1">
      <Fallback name="MainFallback">

        <Sequence name="RechargeSequence">
          <Inverter>
            <CheckBattery threshold="50"/>
          </Inverter>
          <DockAndRecharge dock_id="home_dock"/>
          <MonitorCharge threshold="80"/>
          <UndockRobot/>
        </Sequence>

        <Sequence name="MissionSequence">
          <CheckBattery threshold="50"/>
          <SendGoal x="1.0" y="2.0" yaw="0.0"/>
          <SendGoal x="3.0" y="4.0" yaw="1.57"/>
        </Sequence>

      </Fallback>

    </Repeat>
  </BehaviorTree>
</root>
