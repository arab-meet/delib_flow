<root BTCPP_format="4">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <Script code="
        head_action:='head_controller/follow_joint_trajectory';
        torso_action:='torso_controller/follow_joint_trajectory'"/>

      <!-- Get pre-defined trajectories for torso and head -->
      <GetTrajectoryFromYAML package_name="tiago_grab" config_file="tiago_positions.yaml"/>

      <!-- Go to Office -->
      <NavigateToPose name="ToOffice" goal="{loc.Office}"/>

      <!-- Move your Head around-->
      <FollowJointTrajectory action_name="{head_action}" trajectory="{traj.head_sweep}"/>

      <!-- Move your Torso Up -->
      <FollowJointTrajectory action_name="{torso_action}" trajectory="{traj.torso_up}"/>

      <!-- Move your Torso Down -->
      <FollowJointTrajectory action_name="{torso_action}" trajectory="{traj.torso_down}"/>

      <!-- Move to another Spot -->
      <NavigateToPose name="ToTrashCan" goal="{loc.Trash}"/>

    </Sequence>
  </BehaviorTree>
</root>
